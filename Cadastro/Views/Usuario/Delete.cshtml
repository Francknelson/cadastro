@model Cadastro.Models.DbUsuario

@{
    ViewData["Title"] = "Delete";
}


<div class="card">
    <div class="card-header text-center">
        <h3>Deletar</h3>
    </div>
    <div class="card-title text-center">
        <h4>Deseja mesmo deletar o seguinte usuário?</h4>
    </div>
    <div class="card-body">
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="https://png.pngtree.com/png-vector/20190710/ourlarge/pngtree-user-vector-avatar-png-image_1541962.jpg" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title text-center">@Html.DisplayFor(model => model.nome)</h5>
                        <div class="row justify-content-center">
                            @Html.DisplayFor(model => model.email)
                        </div>
                        <div class="row justify-content-center">
                            @Html.DisplayFor(model => model.datanascimento)
                        </div>
                        <div class="row justify-content-center">
                            @Html.DisplayFor(model => model.sexo)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer text-end">
        <form asp-action="Delete">
            <input type="hidden" asp-for="id" />
            <a asp-action="Index" class="btn btn-warning">Voltar</a>
            <input type="submit" value="Deletar" class="btn btn-danger" /> 
        </form>
    </div>
</div>
