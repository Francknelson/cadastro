@model Cadastro.Models.DbUsuario

@{
    ViewData["Title"] = "Details";
}

<div class="card"> 
    <div class="card-header">
        <h5> Detalhes do Usuário @Html.DisplayFor(model => model.nome)</h5>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Nome</th>
                    <td>@Html.DisplayFor(model => model.nome)</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@Html.DisplayFor(model => model.email)</td>
                </tr>
                <tr>
                    <th>Data de Nascimento</th>
                    <td>@Html.DisplayFor(model => model.datanascimento)</td>
                </tr>
                <tr>
                    <th>Sexo</th>
                    <td>@Html.DisplayFor(model => model.sexo)</td>
                </tr>
                <tr>
                    <th>Rua</th>
                    <td>@Html.DisplayFor(model => model.rua)</td>
                </tr>
                <tr>
                    <th>Número</th>
                    <td>@Html.DisplayFor(model => model.numero)</td>
                </tr>
                <tr>
                    <th>CEP</th>
                    <td>@Html.DisplayFor(model => model.cep)</td>
                </tr>
                <tr>
                    <th>Cidade</th>
                    <td>@Html.DisplayFor(model => model.cidade)</td>
                </tr>
                <tr>
                    <th>Estado</th>
                    <td>@Html.DisplayFor(model => model.estado)</td>
                </tr>
                <tr>
                    <th>Grau</th>
                    <td>@Html.DisplayFor(model => model.grau)</td>
                </tr>
                <tr>
                    <th>Mensagem</th>
                    <td>@Html.DisplayFor(model => model.mensagem)</td>
                </tr>
            </tbody>
        </table>

    </div>
    <div class="card-footer">
         <form asp-action="Delete" class="text-end">
            <input type="hidden" asp-for="id" />
            <a asp-action="Index" class="btn btn-warning" >Voltar</a>
            <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-primary">Editar</a>
        </form>
    </div>
</div>
